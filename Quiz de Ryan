#include <stdio.h>
#include <stdlib.h>

void mostrarRegras() {
    printf("\n=== Regras do Quiz ===\n");
    printf("1. O quiz tem 5 perguntas.\n");
    printf("2. Cada pergunta tem 3 alternativas: a, b ou c.\n");
    printf("3. Cada resposta correta vale 2 pontos.\n");
    printf("4. A pontuação final pode variar de 0 a 10.\n");
    printf("5. Você pode jogar quantas vezes quiser.\n");
    printf("=======================\n\n");
}

int iniciarQuiz() {
    char resposta;
    int pontos = 0;

    printf("\n=== Início do Quiz ===\n");


    printf("1. Qual a capital do Brasil?\n");
    printf("a) São Paulo\nb) Brasília\nc) Rio de Janeiro\n");
    printf("Resposta: ");
    scanf(" %c", &resposta);
    if (resposta == 'b' || resposta == 'B') {
        pontos += 2;
    }


    printf("\n2. Qual e a raiz decima de 1042?\n");
    printf("a) 2\nb) 8\nc) 24\n");
    printf("Resposta: ");
    scanf(" %c", &resposta);
    if (resposta == 'a' || resposta == 'A') {
        pontos += 2;
    }

    
    printf("\n3. Quem escreveu 'A paixão segundo GH'?\n");
    printf("a) Machado de Assis\nb) José de Alencar\nc) Clarice Lispector\n");
    printf("Resposta: ");
    scanf(" %c", &resposta);
    if (resposta == 'c' || resposta == 'C') {
        pontos += 2;
    }

    
    printf("\n4. Qual é o maior planeta do Sistema Solar?\n");
    printf("a) Marte\nb) Júpiter\nc) Saturno\n");
    printf("Resposta: ");
    scanf(" %c", &resposta);
    if (resposta == 'b' || resposta == 'B') {
        pontos += 2;
    }


    printf("\n5. Quem fez a musica Billie Jean\n");
    printf("a) Kanye West\nb) Justin Bieber\nc) Michael Jackson\n");
    printf("Resposta: ");
    scanf(" %c", &resposta);
    if (resposta == 'c' || resposta == 'C') {
        pontos += 2;
    }

   
    printf("\n=== Resultado Final ===\n");
    printf("Sua pontuação: %d/10\n", pontos);

    if (pontos <= 4) {
        printf("Comentário: Precisa estudar mais!\n");
    } else if (pontos <= 8) {
        printf("Comentário: Muito bem!\n");
    } else {
        printf("Comentário: Excelente, parabéns!\n");
    }
    printf("========================\n\n");

    return pontos;
}

int main() {
    int opcao;

    do {
        printf("=== MENU PRINCIPAL ===\n");
        printf("1 - Iniciar Quiz\n");
        printf("2 - Ver Regras\n");
        printf("3 - Sair\n");
        printf("Escolha uma opção: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                iniciarQuiz();
                break;
            case 2:
                mostrarRegras();
                break;
            case 3:
                printf("\nEncerrando o programa. Até logo!\n");
                break;
            default:
                printf("\nOpção inválida. Tente novamente.\n");
        }

    } while (opcao != 3);

    return 0;
}
